@model Raspberry.Models.Product
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create Product</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <div class="text-center"><h4>Создание продукта</h4></div>
    <div>
        <form asp-controller="Product" asp-action="Create" method="post">
            <div class="mb-3">
                <label class="form-label" asp-for="Supplier">Product Supplier:</label>
                <input class="form-control" asp-for="Supplier" />
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Name">Product Name:</label>
                <input class="form-control" asp-for="Name" />
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Description">Product Description:</label>
                <input class="form-control" asp-for="Description" />
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Price">Product Price:</label>
                <input class="form-control" asp-for="Price" />
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Image">Product  Image (xxx.png):</label>
                <input class="form-control" asp-for="Image" />
            </div>
            <div class="text-center">
                <button class="btn btn-primary" type="submit">Submit</button>
            </div>
        </form>
    </div>
</body>
</html>